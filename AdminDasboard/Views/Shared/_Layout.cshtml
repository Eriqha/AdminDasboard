<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - IDSmarter</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="main-container">

        <div class="sidebar">
            @Html.Partial("Sidebar")
        </div>


        <div class="main-content">


            <div class="topbar">
                <input type="text" class="search-bar" placeholder="Search for Students, Instructor" />
                <div class="user-profile">
                    <span class="user-icon">👤</span>
                    <span class="user-info">
                        Natoi F.<br />
                        <small>Registrar</small>
                    </span>
                </div>
            </div>


            <div class="content-body">
                @RenderBody()
            </div>

        </div>
    </div>
</body>
</html>
